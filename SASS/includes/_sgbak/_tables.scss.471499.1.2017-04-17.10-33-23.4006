.table-hover tbody tr:hover td,
{
    background-color: $accent-1;
    color: $accent-2;
    button,
    html input[type="button"],
    input[type="reset"],
    input[type="submit"] {
        padding: 5px 11px;
        border: 0;
        background: none !important;
        color: #fff !important;
    }
}

.table-hover {
    font-size: 12px;
    th {
        color: $dark-text;
    }
}

table-striped tbody tr:nth-of-type(odd) {
    background-color: $accent-2;
    color: #fff;
}