.admin_remote {
    @import "_shared.scss";
    .small_box {
        padding: 20px;
        width: 90%;
        margin: 10px;
        text-align: center;
        font-weight: 600;
    }
    .success {
        background-color: $good;
        color: #000;
    }
    .caution {
        background-color: $bad;
        color: #000;
    }
    .warning {
        background-color: $sev2;
        color: #fff
    }
}    
    .Admin_RemoteServers_InfoContainer {
        display: flex;
        flex-direction: row;
        align-items: center;
        flex: 1;
        .MinMaxTitleLabel,
        .MinLabel,
        .MaxLabel {
            white-space: nowrap;
            overflow: hidden;
        }
        .MinMaxTitleLabel {
            margin-left: 2%;
            width: 17em;
            text-align: right;
        }
        .MinLabel,
        .MaxLabel {
            text-align: right;
            width: 3em;
            margin-right: 1%;
            margin-left: 1%;
        }
        .txtMinMax {
            width: 4em;
            input {
                width: 100%;
                height: 1.5em;
            }
        }
    }
    .Admin_RemoteServers_MaxDayContainer,
    .Admin_RemoteServers_btnUpdateContainer {
        display: flex;
        width: 100%;
        margin-top: 1em;
        justify-content: center;
        align-items: center;
        .lblMaxDays {}
        .txtMinMax {
            margin-left: .5em;
            width: 2em;
        }
    }
